{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/press(?:/.*)?",  "dest": "/index.html" },
    { "src": "/city(?:/.*)?",   "dest": "/index.html" },
    { "src": "/planet(?:/.*)?", "dest": "/index.html" },
    { "src": "/mls(?:/.*)?",    "dest": "/index.html" },
    { "src": "/.*",             "dest": "/index.html" }
  ]
}
